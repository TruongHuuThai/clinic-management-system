<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hóa Đơn #<%= invoice.tt_ma %></title>
    <%- include('partials/thuvien_js') %>
    <link rel="stylesheet" href="/css/thanhtoan_thanhcong.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
</head>
<body>
    <%- include('partials/header') %>

    <main class="container my-5">
        <div class="text-center mb-5">
            <i class="fas fa-check-circle success-icon"></i>
            <h2 class="fw-bold text-success">THANH TOÁN THÀNH CÔNG</h2>
            <div class="d-flex justify-content-center gap-2 mt-4">
                <a href="/" class="btn btn-outline-secondary"><i class="fas fa-home me-1"></i> Trang chủ</a>
                <button onclick="moModalEmail()" class="btn btn-outline-primary"><i class="fas fa-envelope me-1"></i> Email</button>
                <button onclick="inHoaDonPDF('<%= invoice.tt_ma %>')" class="btn btn-primary shadow"><i class="fas fa-print me-1"></i> In Hóa Đơn</button>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-auto">
                <div class="invoice-preview">
                    <%- include('partials/mau_hoa_don_content') %>
                </div>
            </div>
        </div>
    </main>

    <div id="invoice-area" class="invoice-paper">
        <%- include('partials/mau_hoa_don_content') %>
    </div>

    <div class="modal fade" id="emailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Gửi Hóa Đơn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="email" class="form-control" id="customerEmail" placeholder="Nhập email khách hàng...">
                    <input type="hidden" id="hiddenInvoiceId" value="<%= invoice.tt_ma %>">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSendEmailAction" onclick="guiEmailHoaDon()">Gửi Ngay</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/modal_thanhcong') %>
    <script src="/js/thanhtoan_thanhcong.js"></script>
</body>
</html>