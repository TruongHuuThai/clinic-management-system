<!DOCTYPE html>
<html lang="vi">
  <head>
    <%- include('partials/head') %>
    <title><%= title %></title>
    <%- include('partials/thuvien_js') %>
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container mt-4">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0"><%= title %></h3>
        </div>
        <div class="card-body">
          <div class="btn-group mb-4 w-100">
            <button
              type="button"
              class="btn btn-outline-primary active"
              onclick="hienThiTab('existing')"
              id="btnTabCu"
            >
              Benh nhan co san
            </button>
            <button
              type="button"
              class="btn btn-outline-primary"
              onclick="hienThiTab('new')"
              id="btnTabMoi"
            >
              Benh nhan moi
            </button>
          </div>

          <div class="form-group mb-3">
            <label for="patient_search" class="fw-bold"
              >Tim kiem Benh nhan:</label
            >
            <input
              type="text"
              class="form-control"
              id="patient_search"
              placeholder="Nhap ten hoac SDT..."
            />
            <input type="hidden" id="bn_ma" name="bn_ma" />
          </div>

          <div
            id="patient_info_container"
            class="p-3 bg-light rounded border mb-3"
          >
            <h5 class="text-primary mb-3">Thong tin Benh nhan</h5>

            <div id="new_patient_fields" style="display: none">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label"
                    >Ho ten <span class="text-danger">*</span></label
                  >
                  <input type="text" class="form-control" id="bn_ho_ten_new" />
                </div>
                <div class="col-md-6">
                  <label class="form-label"
                    >SDT <span class="text-danger">*</span></label
                  >
                  <input type="text" class="form-control" id="bn_sdt_new" />
                </div>
                <div class="col-md-6">
                  <label class="form-label"
                    >Ngay sinh <span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    class="form-control datepicker-input"
                    id="bn_ngay_sinh_new"
                    placeholder="dd/mm/yyyy"
                  />
                </div>
                <div class="col-md-6">
                  <label class="form-label">Gioi tinh</label>
                  <div>
                    <div class="form-check form-check-inline">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="bn_gioi_tinh_new"
                        value="Nam"
                        checked
                      />
                      <label class="form-check-label">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="bn_gioi_tinh_new"
                        value="Nu"
                      />
                      <label class="form-check-label">Nu</label>
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <label class="form-label">Dia chi</label>
                  <input type="text" class="form-control" id="bn_dia_chi_new" />
                </div>
              </div>
            </div>

            <div id="existing_patient_fields">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Ho ten</label>
                  <input
                    type="text"
                    class="form-control"
                    id="bn_ho_ten_available"
                    readonly
                  />
                </div>
                <div class="col-md-6">
                  <label class="form-label">SDT</label>
                  <input
                    type="text"
                    class="form-control"
                    id="bn_sdt_available"
                    readonly
                  />
                </div>
              </div>
            </div>
          </div>

          <form id="newAppointmentForm" onsubmit="guiFormLichHen(event)">
            <div class="row g-3">
              <div class="col-md-6">
                <label for="ngay_hen" class="form-label fw-bold"
                  >Ngay Hen <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control datepicker-input"
                  id="ngay_hen"
                  name="ngay_hen"
                  required
                  placeholder="dd/mm/yyyy"
                />
              </div>
              <div class="col-md-6">
                <label for="khung_gio" class="form-label fw-bold"
                  >Khung Gio <span class="text-danger">*</span></label
                >
                <select
                  class="form-select"
                  id="khung_gio"
                  name="khung_gio"
                  required
                >
                  <option value="">-- Chon gio --</option>
                </select>
              </div>
              <div class="col-12">
                <label for="ghi_chu" class="form-label">Ghi Chu</label>
                <textarea
                  class="form-control"
                  id="ghi_chu"
                  name="ghi_chu"
                  rows="3"
                ></textarea>
              </div>
            </div>

            <div class="mt-4 text-end">
              <button
                type="button"
                class="btn btn-secondary"
                onclick="danhSachLichHen()"
              >
                Huy
              </button>
              <button type="submit" class="btn btn-primary px-4">
                Tao Lich Hen
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('partials/lichhen/modal_thanhcong') %>
    <script src="/js/lichhen_them.js"></script>
    <script>
      $(document).ready(function () {
        khoiTaoForm();
      });
    </script>
  </body>
</html>
