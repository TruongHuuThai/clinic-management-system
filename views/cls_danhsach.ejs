<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Cận Lâm Sàng</title>
    <%- include('partials/thuvien_js') %>
</head>
<body class="bg-light">
    <%- include('partials/header') %>

    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary fw-bold"><i class="fas fa-microscope me-2"></i>DANH MỤC CẬN LÂM SÀNG</h2>
            <button class="btn btn-primary fw-bold shadow-sm" onclick="moModalThem()">
                <i class="fas fa-plus me-2"></i>Thêm Dịch Vụ
            </button>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th width="5%">STT</th>
                            <th width="15%">Loại Dịch Vụ</th>
                            <th width="25%">Tên Dịch Vụ</th>
                            <th width="20%">Phương Pháp</th>
                            <th width="20%">Ghi Chú</th>
                            <th width="15%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(danhSachDV && danhSachDV.length > 0) { %>
                            <% danhSachDV.forEach((dv, index) => { %>
                                <tr>
                                    <td class="text-center fw-bold"><%= (currentPage - 1) * limit + index + 1 %></td>
                                    
                                    <td><span class="badge bg-info text-dark"><%= dv.dvcls_loai %></span></td>
                                    
                                    <td class="fw-bold text-primary"><%= dv.dvcls_ten %></td>
                                    
                                    <td class="small"><%= dv.dvcls_phuong_pham || '' %></td>
                                    
                                    <td class="small text-muted"><%= dv.dvcls_ghi_chu || '' %></td>
                                    
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-warning me-1" 
                                            onclick="moModalSua(
                                                '<%= dv.dvcls_ma %>', 
                                                `<%= dv.dvcls_ten %>`, 
                                                `<%= dv.dvcls_loai %>`, 
                                                `<%= dv.dvcls_phuong_pham %>`, 
                                                `<%= dv.dvcls_ghi_chu %>`
                                            )" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" 
                                            onclick="yeuCauXoa('<%= dv.dvcls_ma %>', `<%= dv.dvcls_ten %>`)" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="6" class="text-center py-5 text-muted">Chưa có dữ liệu.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <% if (totalPages > 0) { %>
            <nav aria-label="Page navigation" class="py-3 border-top bg-white">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <button class="page-link" onclick="chuyenTrang('<%= currentPage - 1 %>')"> &laquo; </button>
                    </li>
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <button class="page-link" onclick="chuyenTrang('<%= i %>')"><%= i %></button>
                        </li>
                    <% } %>
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <button class="page-link" onclick="chuyenTrang('<%= currentPage + 1 %>')"> &raquo; </button>
                    </li>
                </ul>
            </nav>
            <% } %>
        </div>
    </div>

    <%- include('partials/dichvucls/modal_luu') %>
    <%- include('partials/dichvucls/modal_them') %>
    <%- include('partials/dichvucls/modal_xoa') %>
    <%- include('partials/dichvucls/modal_sua') %>
    <%- include('partials/modal_thanhcong') %>
    <link rel="stylesheet" href="/css/partials/modal_thanhcong.css">
    <link rel="stylesheet" href="/css/partials/dichvucls/modal_them.css">
    <link rel="stylesheet" href="/css/partials/dichvucls/modal_xoa.css">
    <link rel="stylesheet" href="/css/cls_danhsach.css">
    <script src="/js/cls_danhsach.js"></script>
</body>
</html>