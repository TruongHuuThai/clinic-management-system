<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lập Phiếu Thanh Toán - PKB #<%= pkbMa %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .summary-table th,
      .summary-table td {
        vertical-align: middle;
      }
      .summary-table .table-primary strong {
        font-size: 1.25em;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <h2 class="text-success mb-4">LẬP PHIẾU THANH TOÁN</h2>

      <div class="alert alert-info">
        Hồ sơ: <strong><%= patientInfo.bn_ho_ten %></strong> | Mã PKB: **#<%=
        pkbMa %>** | Ngày lập: **<%= ngayThanhToan %>**
      </div>

      <hr />

      <h4 class="mb-3">Chi Tiết Khoản Phí</h4>
      
      <% if (typeof chiTietThuoc !== 'undefined' && chiTietThuoc.length > 0) { %>
          <h5 class="mt-4 mb-2 text-primary">1. Chi Tiết Đơn Thuốc</h5>
          <table class="table table-sm table-bordered">
              <thead class="table-light">
                  <tr>
                      <th width="35%">Tên Thuốc</th>
                      <th width="15%" class="text-center">Số Lượng</th>
                      <th width="15%" class="text-end">Đơn Giá</th>
                      <th width="20%" class="text-end">Thành Tiền</th>
                      <th width="15%">Cách Dùng</th>
                  </tr>
              </thead>
              <tbody>
                  <% chiTietThuoc.forEach((t, index) => { %>
                      <tr>
                          <td><%= t.t_ten_thuoc %></td>
                          <td class="text-center"><%= t.ctdt_so_luong %></td>
                          <td class="text-end"><%= parseFloat(t.cgt_gia_thuoc).toLocaleString('vi-VN') %></td>
                          <td class="text-end fw-bold"><%= parseFloat(t.thanh_tien).toLocaleString('vi-VN') %></td>
                          <td><%= t.ctdt_cacl_dung %></td>
                      </tr>
                  <% }); %>
              </tbody>
          </table>
      <% } %>
      
      <% if (typeof chiTietDichVu !== 'undefined' && chiTietDichVu.length > 0) { %>
          <h5 class="mt-4 mb-2 text-primary">2. Chi Tiết Dịch Vụ Cận Lâm Sàng</h5>
          <table class="table table-sm table-bordered">
              <thead class="table-light">
                  <tr>
                      <th width="50%">Tên Dịch Vụ</th>
                      <th width="15%" class="text-center">Số Lần</th>
                      <th width="15%" class="text-end">Đơn Giá</th>
                      <th width="20%" class="text-end">Thành Tiền</th>
                  </tr>
              </thead>
              <tbody>
                  <% chiTietDichVu.forEach((d, index) => { %>
                      <tr>
                          <td><%= d.dvcls_ten %></td>
                          <td class="text-center"><%= d.ctcd_so_luong %></td>
                          <td class="text-end"><%= parseFloat(d.don_gia).toLocaleString('vi-VN') %></td>
                          <td class="text-end fw-bold"><%= parseFloat(d.thanh_tien).toLocaleString('vi-VN') %></td>
                      </tr>
                  <% }); %>
              </tbody>
          </table>
      <% } %>

      <table class="table table-bordered summary-table mt-4">
        <thead>
          <tr>
            <th>TỔNG CỘNG</th>
            <th class="text-end" width="30%">Số Tiền (VNĐ)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Chi phí Thuốc</td>
            <td class="text-end"><%= tongTienThuoc.toLocaleString('vi-VN') %></td>
          </tr>
          <tr>
            <td>Chi phí Dịch vụ Cận lâm sàng</td>
            <td class="text-end"><%= tongTienDichVu.toLocaleString('vi-VN') %></td>
          </tr>
          <tr class="table-primary">
            <td><strong>TỔNG CỘNG CẦN THANH TOÁN</strong></td>
            <td class="text-end">
              <strong><%= tongCong.toLocaleString('vi-VN') %></strong>
            </td>
          </tr>
        </tbody>
      </table>

      <form method="POST" action="/api/thanhtoan/save">
        <input type="hidden" name="pkb_ma" value="<%= pkbMa %>" />
        <input type="hidden" name="tong_cong" value="<%= tongCong %>" />

        <div class="row mt-4">
          <div class="col-md-6">
            <label for="phuong_thuc_tt" class="form-label"
              >Chọn Phương Thức Thanh Toán:</label
            >
            <select
              id="phuong_thuc_tt"
              name="phuong_thuc_tt"
              class="form-select form-select-lg"
              required
            >
                <% if (typeof ptttList !== 'undefined' && ptttList.length > 0) { %>
                    <% ptttList.forEach(pttt => { %>
                        <option value="<%= pttt.pttt_ma %>" 
                            <%= pttt.pttt_ten === 'selected' %>>
                            <%= pttt.pttt_ten %>
                        </option>
                    <% }); %>
                <% } else { %>
                    <option value="" disabled>Không có phương thức thanh toán nào.</option>
                <% } %>
            </select>
          </div>

          <div
            class="col-md-6 text-end d-flex align-items-end justify-content-end"
          >
            <button type="submit" class="btn btn-success btn-lg px-5">
              <i class="bi bi-check-circle-fill"></i> XÁC NHẬN THANH TOÁN
            </button>
          </div>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>