<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thanh Toán - PKB #<%= pkbMa %></title>
    <%- include('partials/thuvien_js') %>
    <style>
        .summary-row td { padding: 10px 15px; font-size: 1.1rem; }
        .bg-bill { background-color: #f8f9fa; border: 1px dashed #ced4da; }
        .form-check-input:checked { background-color: #ffc107; border-color: #ffc107; }
        .copy-btn { cursor: pointer; font-size: 0.8rem; padding: 2px 8px; }
        .patient-label { font-weight: 600; color: #555; }
        .service-item-wrapper:hover { background-color: #f8f9fa; }
    </style>
</head>
<body class="bg-light">
    <%- include('partials/header') %>

    <main class="container my-5">
      <div class="d-flex align-items-center justify-content-between mb-4">
           <div class="d-flex align-items-center">
               <i class="fas fa-cash-register fa-2x text-success me-3"></i>
               <h2 class="text-success fw-bold mb-0">THU NGÂN & TRẢ KẾT QUẢ</h2>
           </div>
           <span class="badge bg-warning text-dark fs-5">PKB #<%= pkbMa %></span>
      </div>

      <div class="row">
          <div class="col-lg-7">
              <div class="card shadow-sm border-0 mb-3">
                  <div class="card-header bg-primary text-white fw-bold">
                      <i class="fas fa-user-circle me-2"></i>HỒ SƠ BỆNH NHÂN
                  </div>
                  <div class="card-body">
                      <div class="row g-2">
                          <div class="col-md-6">
                              <span class="patient-label">Mã BN:</span> 
                              <span class="fw-bold"><%= patientInfo.bn_ma %></span>
                          </div>
                          <div class="col-md-6">
                              <span class="patient-label">Họ tên:</span> 
                              <span class="text-uppercase text-primary fw-bold"><%= patientInfo.bn_ho_ten %></span>
                          </div>
                          <div class="col-md-6">
                              <span class="patient-label">Năm sinh:</span> 
                              <%= patientInfo.bn_ngay_sinh ? new Date(patientInfo.bn_ngay_sinh).getFullYear() : 'N/A' %> 
                              <span class="ms-1">
                                  <% if(patientInfo.b_la_nam) { %>
                                    <i class="fas fa-mars text-primary"></i> (Nam)
                                  <% } else { %>
                                    <i class="fas fa-venus text-danger"></i> (Nữ)
                                  <% } %>
                              </span>
                          </div>
                          <div class="col-md-6">
                              <span class="patient-label">SĐT:</span> <%= patientInfo.bn_sdt || '---' %>
                          </div>
                          <div class="col-12">
                              <span class="patient-label">Địa chỉ:</span> <%= patientInfo.bn_dia_chi || '---' %>
                          </div>
                          <% if(patientInfo.bn_tien_su) { %>
                          <div class="col-12">
                              <span class="patient-label text-danger">Tiền sử bệnh:</span> 
                              <span class="text-danger fst-italic"><%= patientInfo.bn_tien_su %></span>
                          </div>
                          <% } %>
                          <div class="col-12 mt-2 pt-2 border-top">
                              <span class="patient-label">Triệu chứng khám:</span> 
                              <span class="fw-bold"><%= patientInfo.pkb_trieu_chung %></span>
                          </div>
                          <div class="col-12">
                            <span class="patient-label">Ghi chú lâm sàng:</span> 
                            <span class="text-muted"><%= patientInfo.pkb_ghi_chu || '(Không có)' %></span>
                          </div>
                      </div>
                  </div>
              </div>

              <div class="card shadow-sm border-0 mb-3">
                  <div class="card-header bg-info text-white fw-bold">
                      <i class="fas fa-microscope me-2"></i>Dịch vụ Cận Lâm Sàng
                  </div>
                  <div class="card-body p-0">
                    <% if (chiTietDichVu && chiTietDichVu.length > 0) { %>
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tên Dịch Vụ</th>
                                    <th class="text-end">Đơn Giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% chiTietDichVu.forEach((dv) => { %>
                                    <tr>
                                        <td><%= dv.dvcls_ten %></td>
                                        <td class="text-end fw-bold"><%= parseFloat(dv.don_gia).toLocaleString('vi-VN') %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="p-3 text-center text-muted fst-italic">Không có chỉ định dịch vụ.</div>
                    <% } %>
                  </div>
              </div>

              <div class="card shadow-sm border-0 mb-3">
                  <div class="card-header bg-success text-white fw-bold">
                      <i class="fas fa-pills me-2"></i>Chi Tiết Đơn Thuốc
                  </div>
                  <div class="card-body p-0">
                      <% if (chiTietThuoc && chiTietThuoc.length > 0) { %>
                          <table class="table table-striped table-hover mb-0">
                              <thead class="table-light">
                                  <tr>
                                      <th>Tên Thuốc</th>
                                      <th class="text-center">SL</th>
                                      <th class="text-end">Đơn Giá</th>
                                      <th class="text-end">Thành Tiền</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% chiTietThuoc.forEach((t) => { %>
                                      <tr>
                                          <td>
                                              <span class="fw-bold"><%= t.t_ten_thuoc %></span><br>
                                              <small class="text-muted"><%= t.ctdt_lieu_dung %></small>
                                          </td>
                                          <td class="text-center"><%= t.ctdt_so_luong %></td>
                                          <td class="text-end"><%= parseFloat(t.don_gia).toLocaleString('vi-VN') %></td>
                                          <td class="text-end fw-bold"><%= parseFloat(t.thanh_tien).toLocaleString('vi-VN') %></td>
                                      </tr>
                                  <% }); %>
                              </tbody>
                          </table>
                      <% } else { %>
                          <div class="p-3 text-center text-muted fst-italic">Không có thuốc được kê.</div>
                      <% } %>
                  </div>
              </div>
          </div>

          <div class="col-lg-5">
              <form method="POST" action="/api/thanh-toan/luu" id="thanhtoanForm">
                
                <input type="hidden" name="pkb_ma" value="<%= pkbMa %>" />
                <input type="hidden" name="tong_cong" value="<%= tongCong %>" id="inputTongCong" /> 
                <input type="hidden" name="ghi_chu_cu" value="<%= patientInfo.pkb_ghi_chu %>" />

                <div class="card shadow-sm border-warning mb-3">
                    <div class="card-header bg-warning text-dark fw-bold">
                        <i class="fas fa-brain me-2"></i>Chỉ Định Bổ Sung (Ngoại viện)
                    </div>
                    <div class="card-body bg-light p-2">
                        <div class="bg-white rounded border p-2">
                            <div class="form-check mb-2 service-item-wrapper">
                                <input class="form-check-input" type="checkbox" name="chi_dinh_ngoai" id="opt_none" value="none" checked>
                                <label class="form-check-label text-muted w-100" for="opt_none">Không có chỉ định thêm</label>
                            </div>
                            <hr class="my-2 text-muted">
                            <div class="form-check mb-2 service-item-wrapper">
                                <input class="form-check-input service-item" type="checkbox" name="chi_dinh_ngoai" id="opt_mri" value="Chụp MRI Sọ não">
                                <label class="form-check-label fw-bold w-100" for="opt_mri">Chụp MRI Sọ não</label>
                            </div>
                            <div class="form-check mb-2 service-item-wrapper">
                                <input class="form-check-input service-item" type="checkbox" name="chi_dinh_ngoai" id="opt_ct" value="Chụp CT-Scanner Sọ não">
                                <label class="form-check-label fw-bold w-100" for="opt_ct">Chụp CT-Scanner Sọ não</label>
                            </div>
                            <div class="form-check mb-2 service-item-wrapper">
                                <input class="form-check-input service-item" type="checkbox" name="chi_dinh_ngoai" id="opt_eeg" value="Đo Điện não đồ (EEG)">
                                <label class="form-check-label w-100" for="opt_eeg">Đo Điện não đồ (EEG)</label>
                            </div>
                            <div class="form-check mb-2 service-item-wrapper">
                                <input class="form-check-input service-item" type="checkbox" name="chi_dinh_ngoai" id="opt_doppler" value="Siêu âm Doppler mạch cảnh">
                                <label class="form-check-label w-100" for="opt_doppler">Siêu âm Doppler mạch</label>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex align-items-center">
                                <div class="form-check me-2">
                                    <input class="form-check-input service-item" type="checkbox" name="chi_dinh_ngoai" id="opt_khac" value="other">
                                    <label class="form-check-label" for="opt_khac">Khác:</label>
                                </div>
                                <input type="text" class="form-control form-control-sm" name="chi_dinh_khac_text" id="input_khac" placeholder="Nhập chỉ định..." disabled>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label class="form-label fw-bold small text-success">LỜI DẶN THÊM</label>
                            <textarea name="loi_dan_them" class="form-control" rows="2" placeholder="VD: Tái khám sau 2 tuần..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="card shadow border-primary mb-3">
                    <div class="card-header bg-primary text-white fw-bold text-center">HÓA ĐƠN THANH TOÁN</div>
                    <div class="card-body bg-bill">
                        <table class="table table-borderless mb-0">
                            <tr class="summary-row border-bottom">
                                <td>Công Khám:</td>
                                <td class="text-end"><%= tienKham.toLocaleString('vi-VN') %> đ</td>
                            </tr>
                            <tr class="summary-row border-bottom">
                                <td>Tiền Dịch Vụ:</td>
                                <td class="text-end"><%= tongTienDichVu.toLocaleString('vi-VN') %> đ</td>
                            </tr>
                            <tr class="summary-row border-bottom">
                                <td>Tiền Thuốc:</td>
                                <td class="text-end"><%= tongTienThuoc.toLocaleString('vi-VN') %> đ</td>
                            </tr>
                            <tr class="summary-row text-danger">
                                <td class="fw-bold fs-5">TỔNG CỘNG:</td>
                                <td class="text-end fw-bold fs-4"><%= tongCong.toLocaleString('vi-VN') %> đ</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Hình thức thanh toán:</label>
                    <div class="input-group">
                        <select name="phuong_thuc_tt" class="form-select form-select-lg" id="phuong_thuc_tt">
                            <% if (typeof ptttList !== 'undefined') { %>
                                <% ptttList.forEach(pttt => { %>
                                    <option value="<%= pttt.pttt_ma %>"><%= pttt.pttt_ten %></option>
                                <% }); %>
                            <% } else { %>
                                <option value="21">Tiền Mặt</option>
                                <option value="12">Chuyển Khoản (QR Code)</option>
                            <% } %>
                        </select>
                        <button type="button" class="btn btn-primary d-none" id="btnOpenQR">
                            <i class="fas fa-qrcode"></i> Xem QR
                        </button>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg fw-bold shadow">
                        <i class="fas fa-check-double me-2"></i> XÁC NHẬN ĐÃ THANH TOÁN
                    </button>
                    <a href="/" class="btn btn-outline-secondary">Quay về trang chủ</a>
                </div>
              </form>
           </div>
      </div>
    </main>

    <div class="modal fade" id="qrModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold"><i class="fas fa-qrcode me-2"></i>QUÉT MÃ THANH TOÁN</h5>
                </div>
                <div class="modal-body bg-light">
                    <div class="text-center bg-white p-3 rounded border mb-3">
                        <img id="vietqr-image" src="" alt="QR Code" class="img-fluid" style="max-height: 250px;">
                        <div class="mt-2 text-muted small fst-italic">Tự động kiểm tra giao dịch sau 5s...</div>
                    </div>
                    
                    <ul class="list-group small">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted">Ngân hàng:</span>
                            <span class="fw-bold text-primary" id="qr-bank-name">BIDV</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted">Số tài khoản:</span>
                            <div class="d-flex align-items-center">
                                <span class="fw-bold me-2" id="qr-account-num">...</span>
                                <i class="fas fa-copy text-secondary cursor-pointer" onclick="copyText('qr-account-num')"></i>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted">Chủ tài khoản:</span>
                            <span class="fw-bold text-uppercase" id="qr-account-name">...</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted">Số tiền:</span>
                            <span class="fw-bold text-success fs-5" id="qr-amount">0 đ</span>
                        </li>
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted">Nội dung CK:</span>
                                <i class="fas fa-copy text-secondary cursor-pointer" onclick="copyText('qr-content')"></i>
                            </div>
                            <div class="fw-bold text-danger text-center border rounded p-2 bg-white" id="qr-content">...</div>
                        </li>
                    </ul>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Đóng & Chọn lại</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/modal_thanhcong') %>
    <script src="/js/thanhtoan_hoadon.js"></script>
</body>
</html>