<div class="modal fade" id="historyModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg">
      <div class="modal-header bg-secondary text-white">
        <h5 class="modal-title fw-bold">
          <i class="bi bi-clock-history me-2"></i>Lịch Sử Biến Động Giá
        </h5>
      </div>

      <div class="modal-body p-0">
        <div class="p-3 bg-light border-bottom text-center">
          <h5 class="text-primary fw-bold mb-0" id="history-drug-name">...</h5>
        </div>

        <div
          class="table-responsive"
          style="max-height: 400px; overflow-y: auto"
        >
          <table class="table table-striped table-hover mb-0">
            <thead class="sticky-top bg-white shadow-sm">
              <tr>
                <th class="ps-4">Giá bán (VNĐ)</th>
                <th>Từ ngày</th>
                <th>Đến ngày</th>
              </tr>
            </thead>
            <tbody id="history-table-body"></tbody>
          </table>
        </div>

        <div id="history-loading" class="text-center p-4">
          <div class="spinner-border text-secondary" role="status"></div>
        </div>
        <div id="history-empty" class="text-center p-4 d-none text-muted">
          <i class="bi bi-inbox fs-1 d-block mb-2"></i>
          Chưa có lịch sử thay đổi giá.
        </div>
      </div>

      <div class="modal-footer bg-light">
        <button
          type="button"
          class="btn btn-secondary btn-sm px-4"
          data-bs-dismiss="modal"
        >
          Đóng
        </button>
      </div>
    </div>
  </div>
</div>
